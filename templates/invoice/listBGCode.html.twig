{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>src/Controller/UserController.php</code></li>
        <li>Your template at <code>templates/user/index.html.twig</code></li>
    </ul>
    <div>This page for Edit USer</div>
    <ul id="list_user">
        <li class="user_item list_label clearfix">
            <div class="col-xs-3">Budget Code</div>
            <div class="col-xs-7">Account</div>
            <div class="col-xs-2">Action</div>
        </li>
        {% if dataBGCode is defined %}
        {% for bgcode in dataBGCode %}
            <li class="user_item clearfix">
                <div class="col-xs-3">{{ bgcode.budgetCode }}</div>
                <div class="col-xs-7">{{ bgcode.account }}</div>
                <div class="col-xs-2"><a href="{{ url('invoice') }}/delete/BGCode/{{ bgcode.id }}">delete</a></div>
            </li>
        {% endfor %}
        {% endif %}
        <li class="user_item">
            <div class="col-xs-12"><a href="{{ url('createBGCode') }}">Create New Budget Code</a></div>
        </li>
    </ul>



</div>
{% endblock %}
