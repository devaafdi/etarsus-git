{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>src/Controller/UserController.php</code></li>
        <li>Your template at <code>templates/user/index.html.twig</code></li>
    </ul>
    <div>This page for Edit USer</div>
    <ul id="list_user">
        <li class="user_item list_label">
            <div class="user_tab">Full Name</div>
            <div class="user_tab">Job Title</div>
            <div class="user_tab">Division</div>
            <div class="user_tab">Role</div>
            <div class="user_tab">Delete Action</div>
        </li>
        {% if dataUser is defined %}
        {% for user in dataUser %}
            <li class="user_item">
                <div class="user_tab"><a href="{{ url('user') }}user/{{ user.id }}">{{ user.firstName }} {{ user.lastName }}</a></div>
                <div class="user_tab">{{ user.jobTitle }}</div>
                <div class="user_tab">{{ user.idDivision.division }}</div>
                <div class="user_tab">{{ user.userRole }}</div>
                <div class="user_tab"><a href="{{ url('user') }}/delete/{{ user.id }}">delete</a></div>
            </li>
        {% endfor %}
        {% endif %}

    </ul>



</div>
{% endblock %}
